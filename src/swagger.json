{
  "openapi": "3.0.0",
  "info": {
    "title": "Desafio MB Labs | Aplicativo de eventos",
    "description": "Essa API tem como objetivo desenvolver um aplicativo de eventos, onde o usuário pode se cadastrar, comprar ingressos e acompanhar os eventos que irá participar.",
    "version": "1.0.0",
    "contact": {
      "name": "Igor Vitor Vieira",
      "email": "igor.gutoo63@gmail.com"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3000/api",
      "description": "Servidor local"
    }
  ],
  "paths": {
    "/login": {
      "post": {
        "summary": "Login",
        "description": "Login de usuário",
        "tags": [
          "Auth"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "igor.gutoo63@gmail.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "$Teste123"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "headers": {
              "token": {
                "type": "object",
                "description": "Token de autenticação"
              }
            }
          },
          "404": {
            "description": "User not found"
          },
          "500": {
            "description": "Erro interno do servidor"
          },
          "409": {
            "description": "Password does not match"
          }
        }
      }
    },
    "/permissions": {
      "post": {
        "summary": "Cadastro de permissões",
        "description": "Cadastra uma nova permissão no sistema",
        "tags": [
          "Permissions"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Permission"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Permissão cadastrada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Permission"
                }
              }
            }
          },
          "500": {
            "description": "Erro interno do servidor"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden access"
          }
        }
      }
    },
    "/user-permissions": {
      "post": {
        "summary": "Cadastro de permissões do usuário",
        "description": "Cadastra uma nova permissão do usuário no sistema",
        "tags": [
          "UserPermissions"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserPermission"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Permissão cadastrada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserPermission"
                }
              }
            }
          },
          "500": {
            "description": "Erro interno do servidor"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden access"
          }
        }
      }
    },
    "/users": {
      "post": {
        "summary": "Cadastro de usuário",
        "description": "Cadastra um novo usuário no sistema",
        "tags": [
          "Users"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Usuário cadastrado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "400": {
            "description": "Erro ao cadastrar usuário"
          },
          "500": {
            "description": "Erro interno do servidor"
          },
          "409": {
            "description": "Email already in use"
          }
        }
      }
    },
    "/users/{id}": {
      "get": {
        "summary": "Perfil de usuário",
        "description": "Busca o perfil de um usuário",
        "tags": [
          "Users"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID do usuário",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Usuário encontrado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "404": {
            "description": "User not found"
          },
          "409": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/users/{id}/picture": {
      "patch": {
        "summary": "Upload de imagem",
        "description": "Upload de imagem de perfil do usuário",
        "tags": [
          "Users"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID do usuário",
            "required": true,
            "type": "string"
          }
        ],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Imagem de perfil atualizada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "404": {
            "description": "User not found"
          },
          "409": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/user-accounts": {
      "post": {
        "summary": "Cadastro de contas do usuário",
        "description": "Cadastra uma nova conta do usuário no sistema",
        "tags": [
          "UserAccounts"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserAccount"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Conta cadastrada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserAccount"
                }
              }
            }
          },
          "404": {
            "description": "User not found"
          },
          "409": {
            "description": "Email already in use"
          }
        }
      }
    },
    "/user-accounts/{userId}": {
      "get": {
        "summary": "Busca de contas do usuário",
        "description": "Busca as contas do usuário",
        "tags": [
          "UserAccounts"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "description": "ID do usuário",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "201": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "$ref": "#/components/schemas/UserAccount"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "402": {
            "description": "Invalid token"
          },
          "403": {
            "description": "Forbidden access"
          }
        }
      }
    },
    "/events/{id}": {
      "get": {
        "summary": "Busca de eventos por id",
        "description": "Ver detalhes do evento",
        "tags": [
          "Events"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID do evento"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Event"
                }
              }
            }
          },
          "404": {
            "description": "Event not found"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/events": {
      "get": {
        "summary": "Busca de eventos",
        "description": "Busca de eventos utilizando filtro de data e nome",
        "tags": [
          "Events"
        ],
        "parameters": [
          {
            "name": "name",
            "in": "query",
            "description": "Nome do evento"
          },
          {
            "name": "type",
            "in": "query",
            "description": "Tipo do evento (empresa, universidade)"
          },
          {
            "name": "datetime",
            "in": "query",
            "description": "Hora do evento"
          },
          {
            "name": "status",
            "in": "query",
            "description": "Status do evento",
            "schema": {
              "type": "string",
              "enum": [
                "CANCELED",
                "FINISHED",
                "OPEN",
                "SOLD_OUT"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "$ref": "#/components/schemas/Event"
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Cadastro de eventos",
        "description": "Cadastra um novo evento no sistema",
        "tags": [
          "Events"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Event"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Evento criado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Event"
                }
              }
            }
          },
          "404": {
            "description": "User not found"
          },
          "500": {
            "description": "Erro interno do servidor"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden access"
          }
        }
      }
    },
    "/event-photos/{id}/photos": {
      "post": {
        "summary": "Upload de imagens do evento",
        "description": "Upload de imagens do evento",
        "tags": [
          "Events"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID do evento",
            "required": true,
            "type": "string"
          }
        ],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "format": "binary"
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Fotos do evento atualizadas com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Event"
                }
              }
            }
          },
          "404": {
            "description": "Event not found"
          },
          "409": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/payments": {
      "post": {
        "summary": "Criação de pagamento",
        "description": "Cria um pagamento, gera ingressoe diminui a quantidade de ingressos disponíveis",
        "tags": [
          "Payments"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Payment"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Payment"
                }
              }
            }
          },
          "404": {
            "description": "Event not found"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden access"
          },
          "400": {
            "description": "Not enough tickets available"
          }
        }
      }
    },
    "/tickets/{userId}": {
      "get": {
        "summary": "Busca de ingressos do usuário",
        "description": "Lista todos ingressos comprados pelo usuário",
        "tags": [
          "Tickets"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "description": "ID do usuário"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "$ref": "#/components/schemas/Ticket"
                }
              }
            }
          },
          "404": {
            "description": "User not found"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "Igor Vitor Vieira"
          },
          "email": {
            "type": "string",
            "example": "igor.gutoo63@gmail.com"
          },
          "password": {
            "type": "string",
            "example": "$Teste123"
          }
        }
      },
      "UserAccount": {
        "type": "object",
        "properties": {
          "userId": {
            "type": "string"
          },
          "name": {
            "type": "string",
            "example": "Nubank"
          },
          "amount": {
            "type": "number",
            "example": "1000.00"
          },
          "type": {
            "type": "string",
            "enum": [
              "debit",
              "credit",
              "pix",
              "boleto"
            ]
          }
        }
      },
      "Event": {
        "type": "object",
        "properties": {
          "userId": {
            "type": "string"
          },
          "name": {
            "type": "string",
            "example": "Evento teste"
          },
          "datetime": {
            "type": "timestamp",
            "example": "2023-07-31 14:30:00.000"
          },
          "location": {
            "type": "string",
            "example": "São Paulo"
          },
          "participants_limit": {
            "type": "number",
            "example": "100"
          },
          "unitary_price": {
            "type": "number",
            "example": "100.00"
          },
          "avaliable_tickets": {
            "type": "number",
            "example": "100"
          },
          "description": {
            "type": "string",
            "example": "Evento teste"
          },
          "status": {
            "type": "string",
            "enum": [
              "CANCELED",
              "FINISHED",
              "OPEN",
              "SOLD_OUT"
            ]
          }
        }
      },
      "Ticket": {
        "type": "object",
        "properties": {
          "eventId": {
            "type": "string"
          },
          "userId": {
            "type": "string"
          },
          "paymentId": {
            "type": "string"
          }
        }
      },
      "Payment": {
        "type": "object",
        "properties": {
          "eventId": {
            "type": "string"
          },
          "userAccountId": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": [
              "debit",
              "credit",
              "pix",
              "boleto"
            ]
          },
          "quantity": {
            "type": "number",
            "example": "1"
          }
        }
      },
      "Permission": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "ADMIN"
          },
          "description": {
            "type": "string",
            "example": "Administrador"
          }
        }
      },
      "UserPermission": {
        "type": "object",
        "properties": {
          "userId": {
            "type": "string"
          },
          "permissionId": {
            "type": "string"
          }
        }
      }
    },
    "schemes": [
      "https",
      "http"
    ],
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}