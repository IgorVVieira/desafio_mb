{
  "openapi": "3.0.0",
  "info": {
    "title": "Desafio MB Labs | Aplicativo de eventos",
    "description": "Essa API tem como objetivo desenvolver um aplicativo de eventos, onde o usuário pode se cadastrar, comprar ingressos e acompanhar os eventos que irá participar.",
    "version": "1.0.0",
    "contact": {
      "name": "Igor Vitor Vieira",
      "email": "igor.gutoo63@gmail.com"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3000/api",
      "description": "Servidor local"
    }
  ],
  "paths": {
    "/login": {
      "post": {
        "summary": "Login",
        "description": "Login de usuário",
        "tags": [
          "Auth"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "igor.gutoo63@gmail.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "$Teste123"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "headers": {
              "token": {
                "type": "object",
                "description": "Token de autenticação"
              }
            }
          },
          "404": {
            "description": "User not found"
          },
          "500": {
            "description": "Erro interno do servidor"
          },
          "409": {
            "description": "Password does not match"
          }
        }
      }
    },
    "/users": {
      "post": {
        "summary": "Cadastro de usuário",
        "description": "Cadastra um novo usuário no sistema",
        "tags": [
          "Users"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Usuário cadastrado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "400": {
            "description": "Erro ao cadastrar usuário"
          },
          "500": {
            "description": "Erro interno do servidor"
          },
          "409": {
            "description": "Email already in use"
          }
        }
      }
    },
    "/users/{id}": {
      "get": {
        "summary": "Perfil de usuário",
        "description": "Busca o perfil de um usuário",
        "tags": [
          "Users"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID do usuário",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Usuário encontrado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "404": {
            "description": "User not found"
          },
          "409": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/user-accounts": {
      "post": {
        "summary": "Cadastro de contas do usuário",
        "description": "Cadastra uma nova conta do usuário no sistema",
        "tags": [
          "UserAccounts"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserAccount"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Conta cadastrada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserAccount"
                }
              }
            }
          },
          "404": {
            "description": "User not found"
          },
          "409": {
            "description": "Email already in use"
          }
        }
      }
    },
    "/user-accounts/{userId}": {
      "get": {
        "summary": "Busca de contas do usuário",
        "description": "Busca as contas do usuário",
        "tags": [
          "UserAccounts"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "description": "ID do usuário",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "201": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "$ref": "#/components/schemas/UserAccount"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "402": {
            "description": "Invalid token"
          },
          "403": {
            "description": "Forbidden access"
          }
        }
      }
    },
    "/events/{id}": {
      "get": {
        "summary": "Busca de eventos por id",
        "description": "Ver detalhes do evento",
        "tags": [
          "Events"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID do evento"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Event"
                }
              }
            }
          },
          "404": {
            "description": "Event not found"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/events": {
      "get": {
        "summary": "Busca de eventos",
        "description": "Busca de eventos utilizando filtro de data e nome",
        "tags": [
          "Events"
        ],
        "parameters": [
          {
            "name": "name",
            "in": "query",
            "description": "Nome do evento"
          },
          {
            "name": "type",
            "in": "query",
            "description": "Tipo do evento (empresa, universidade)"
          },
          {
            "name": "datetime",
            "in": "query",
            "description": "Hora do evento"
          },
          {
            "name": "status",
            "in": "query",
            "description": "Status do evento",
            "schema": {
              "type": "string",
              "enum": [
                "CANCELED",
                "FINISHED",
                "OPEN",
                "SOLD_OUT"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "$ref": "#/components/schemas/Event"
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Cadastro de eventos",
        "description": "Cadastra um novo evento no sistema",
        "tags": [
          "Events"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Event"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Evento criado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Event"
                }
              }
            }
          },
          "404": {
            "description": "User not found"
          },
          "500": {
            "description": "Erro interno do servidor"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden access"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "Igor Vitor Vieira"
          },
          "email": {
            "type": "string",
            "example": "igor.gutoo63@gmail.com"
          },
          "password": {
            "type": "string",
            "example": "$Teste123"
          }
        }
      },
      "UserAccount": {
        "type": "object",
        "properties": {
          "user_id": {
            "type": "string"
          },
          "name": {
            "type": "string",
            "example": "Nubank"
          },
          "amount": {
            "type": "number",
            "example": "1000.00"
          },
          "type": {
            "type": "string",
            "enum": [
              "debit",
              "credit",
              "pix",
              "boleto"
            ]
          }
        }
      },
      "Event": {
        "type": "object",
        "properties": {
          "user_id": {
            "type": "string"
          },
          "name": {
            "type": "string",
            "example": "Evento teste"
          },
          "datetime": {
            "type": "timestamp",
            "example": "2023-07-31 14:30:00.000"
          },
          "location": {
            "type": "string",
            "example": "São Paulo"
          },
          "participants_limit": {
            "type": "number",
            "example": "100"
          },
          "unitary_price": {
            "type": "number",
            "example": "100.00"
          },
          "avaliable_tickets": {
            "type": "number",
            "example": "100"
          },
          "description": {
            "type": "string",
            "example": "Evento teste"
          },
          "status": {
            "type": "string",
            "enum": [
              "CANCELED",
              "FINISHED",
              "OPEN",
              "SOLD_OUT"
            ]
          }
        }
      }
    },
    "schemes": [
      "https",
      "http"
    ],
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}